[user]
  name = Yamada Yuki
  email = yamadayuuki0818@gmail.com

[color]
  ui = auto
  status = always

[alias]
  amend = commit --amend -C HEAD
  br = branch
  brm = branch --merged
  cm = commit
  co = checkout
  d = diff
  dc = diff --cached
  dmb = !git branch --merged | grep -vE '^\\*|master$|develop$' | xargs -I % git branch -d %
  empty = commit --allow-empty
  fo = fetch -p origin
  fp = !git fetch -p
  history = log --graph --date=iso --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cd %Cblue%cn %Cred%d %Creset%s'
  logg = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr%Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
  pd = !git log --oneline | sk | awk '{ print $1 }' | xargs -I% git show %
  po = pull origin
  pom = pull origin master
  pp = !git pull -p && git dmb
  rebase = rebase -i
  rh = reset HEAD~1
  sh = show
  s = status
  st = status
  tr = !git history
  wip = commit -m "WIP"

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  pager = delta

[push]
  default = current

[diff]
  algorithm = histogram
  tool = vimdiff
  indentHeuristic = true

[interactive]
  diffFilter = delta --color-only

[ghq]
  root = ~/dev/src

[github]
  user = yamadayuki
  privatekey = $HOME/.ssh/id_rsa

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[credential]
  helper = osxkeychain

[pull]
  ff = only

[delta]
  features = side-by-side line-numbers decorations
  file-style = bold yellow ul
  file-decoration-style = none
  hunk-header-decoration-style = none

[rerere]
  enabled = true

[init]
  defaultBranch = main
